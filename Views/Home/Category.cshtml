@{
    ViewData["Title"] = "";
}
@using Products_N_Categories.Models
@model Category

<div class="text-center">
    <h1 class="display-4"><a href="/">Products</a> | Categories</h1>
 
 <div class="row">


<div class="col-md">
    <h1>New Category</h1>

    <form asp-action="AddCategory" asp-controller="Home" method="post">     

    <section>
        <span asp-validation-for="Name"></span>
        <label asp-for="Name">Name</label>
        <input type="text" name="Name">
    </section>    
    
    <input type="submit" value="Create!">
    </form>
</div>

<div class="col-md">
    <h1>Existing Categories</h1>

    @foreach(var a in @ViewBag.Allcategories){
        <p><a href="catog/@a.CategoryId">@a.Name</a></p>
    }
</div>
 </div>

</div>